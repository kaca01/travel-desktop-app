<UserControl x:Class="TravelApp.DesktopHost.View.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelApp.DesktopHost.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <PasswordBox x:Name="passwordBox"
                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                 FontSize="15"
                 Margin="0"
                 materialDesign:TextFieldAssist.UnderlineBrush="#4889E6"
                 Background="#A5FFFFFF"
                 PreviewTextInput="TextBox_PreviewTextInputPassword"
                 PasswordChanged="PasswordBox_PasswordChanged"
                 LostFocus="PasswordBox_PasswordChanged"/>
</UserControl>
